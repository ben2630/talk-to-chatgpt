{
	"manifest_version": 3.1,
	"name": "Talk-to-ChatGPT w Google",
	"version": "1.6.1",
	"description": "Talk to ChatGPT through your microphone and hear its responses with a voice. Uses speech recognition and text-to-speech technologies",
	"action": {
		"default_popup": "popup.html",
		"default_icon": {              
		  "16": "images/icon-16.png",
		  "32": "images/icon-32.png"
		},
		"default_title": "Talk-to-ChatGPT V1.6.1"
	},
	"content_scripts":[
		{
			"matches":[
				"https://chat.openai.com/chat*"
			],
			"js": ["jquery.min.js","content.js","https://apis.google.com/js/api.js"]
		}
	],
	"icons": {
		"16": "images/icon-16.png",
		"32": "images/icon-32.png",
		"48": "images/icon-48.png",
		"128": "images/icon-128.png"
	}
}
